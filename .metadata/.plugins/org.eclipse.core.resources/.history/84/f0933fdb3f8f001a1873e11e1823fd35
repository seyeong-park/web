<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title> es6 인수 </title>
<script>
 
	// @ 1. 인수의 기본값(default) 지정
   	function multiple( first, second=100 )
	{
		return first * second;
	}
	document.writeln('곱은 ' +  multiple( 3, 4 ) + '<br/>'  );
	document.writeln('곱은 ' +  multiple( 3, 4, 5 ) + '<br/>'  );
	document.writeln('곱은 ' +  multiple( 3 ) + '<br/>' );  //second=100 기본값주기
	
	// @ 2. 가변길이 인수(...) 
	// for in:인자 가져오기 
	// for of:값 가져오기
	function sum(...su){
		var hap=0;
		for (var i of su) {
			hap+=i;
		}
		return hap;
		
	}
	document.write(sum(1,2,3)+'<br/>');
	document.write(sum(1,2,3,4)+'<br/>');
	document.write(sum(1,2,3,4,5,6,7,8,9)+'<br/>');
	 
		 
 
</script>
</head>
<body>

</body>
</html>