//동적으로 요소 만들기 -> <li>에 오늘 날짜 -> ul에 붙이기 *****동적으로 만든 요소는 이벤트 적용불가 _> on()이용
	$('h1').click(function(){
		var li = $('<li/>').text(new Date());
		$('ul').append(li);
	});
	
	//부모(ul)의 자식 중 <li>에 이벤트 적용
	$('ul').on('click','li',function(){
		$('#result').text($(this).text());
	});
	
	
});


</script>
